<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SnappyGit - Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center h-screen bg-gray-100">

  <div class="bg-white p-6 rounded-lg shadow-lg text-center w-80">
    <h1 class="text-2xl font-bold mb-4">Welcome to SnappyGit</h1>
    <p class="text-gray-600 mb-4">Sign in with your Google account to continue</p>
    
    <!-- ✅ Google Login Button -->
   
  </div>

<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.0/firebase-app.js";
import { getAuth, GoogleAuthProvider, signInWithPopup } from "https://www.gstatic.com/firebasejs/11.6.0/firebase-auth.js";


// ✅ Firebase Config
const firebaseConfig = {
  apiKey: "<%= FIREBASE_API_KEY %>",
  authDomain: "<%= FIREBASE_AUTH_DOMAIN %>",
  projectId: "<%= FIREBASE_PROJECT_ID %>",
  storageBucket: "<%= FIREBASE_STORAGE_BUCKET %>",
  messagingSenderId: "<%= FIREBASE_MESSAGING_SENDER_ID %>",
  appId: "<%= FIREBASE_APP_ID %>"
};

// ✅ Initialize Firebase
const app = initializeApp(firebaseConfig);
const auth = getAuth(app);

// ✅ Google Sign-in
document.getElementById("loginBtnGoogle").addEventListener("click", async () => {
  try {
    const result = await signInWithPopup(auth, new GoogleAuthProvider());
    console.log("✅ Google login:", result.user.displayName);

    // ✅ Save user data in localStorage (optional)
    localStorage.setItem("userName", result.user.displayName);
    localStorage.setItem("userEmail", result.user.email);
    localStorage.setItem("userPic", result.user.photoURL);

    // ✅ Redirect to homepage
    window.location.href = "/";
  } catch (error) {
    console.error("Google login error:", error);
    alert("Google login failed");
  }
});
</script>

</body>
</html>
